@using BugIssuer.Domain;
@model IEnumerable<Issue>
@{
    ViewData["Title"] = "Issues";
    var currentSort = Convert.ToString(ViewData["CurrentSort"]);
    var currentFilter = Convert.ToString(ViewData["CurrentFilter"]);
    var btnAll = string.IsNullOrEmpty(currentFilter) || currentFilter == "All" ? "btn-primary" : "btn-light";
    var btnOpen = currentFilter == "Open" ? "btn-primary" : "btn-light";
    var btnOngoing = currentFilter == "Ongoing" ? "btn-primary" : "btn-light";
    var btnClosed = currentFilter == "Closed" ? "btn-primary" : "btn-light";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Issues</h2>
        <div>
            <a href="/Home/NewIssue" class="btn btn-success">New Issue</a>
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <a href="/Home/Issues?filterStatus=All&sortOrder=@currentSort" class="btn @btnAll">All</a>
            <a href="/Home/Issues?filterStatus=Open&sortOrder=@currentSort" class="btn @btnOpen">Open</a>
            <a href="/Home/Issues?filterStatus=Ongoing&sortOrder=@currentSort" class="btn @btnOngoing">Ongoing</a>
            <a href="/Home/Issues?filterStatus=Closed&sortOrder=@currentSort" class="btn @btnClosed">Closed</a>
        </div>
    </div>
    @Html.Partial("_IssuesPartial", Model)
</div>


<script>
    $('#partialZone').load("/Home/IssuesPartial")
</script>